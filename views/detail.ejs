<%- include("partials/header.ejs"); %>

<div class="container">
    <div class="section"></div> <!-- First section, empty -->
  
    <div class="section">
      <!-- Title -->
      <% if(locals.title){ %>
        <h2><%= title %></h2>
      <% } %>
  
      <!-- Content -->
      <% if(locals.title){ %>
        <p><%= content %></p>
      <% } %>
  
      <!-- Edit and delete buttons -->
      <div>
        <button onclick="location.href='/edit?ind=<%= ind %>'">Edit</button>
        <button onclick="deletePost('<%= ind %>')">Delete</button>
      </div>
  
      <script>
        // Function to handle delete post
        function deletePost(ind) {
          if (confirm("Are you sure you want to delete this post?")) {
            // Perform delete action, for example:
            location.href = '/delete?ind=' + ind;
          }
        }
      </script>
    </div>
  
    <div class="section"></div> <!-- Third section, empty -->
  </div>

<%- include("partials/footer.ejs"); %>